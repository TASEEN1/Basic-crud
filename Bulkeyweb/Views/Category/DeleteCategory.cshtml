        <div class="mb-3">
            <h2 class="text-danger h5">Delete Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger mb-2"></div>
        <div class="mb-2 row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>

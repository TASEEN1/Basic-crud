@model List<Category>





<div class="container">
    <div class="row py-3 mb-4">
        <div class="col">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-auto ms-auto">
            <a asp-action="CreateCategory" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td class="text-center">
                        <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@obj.ID" class="btn btn-outline-primary btn-sm me-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@obj.ID" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>





